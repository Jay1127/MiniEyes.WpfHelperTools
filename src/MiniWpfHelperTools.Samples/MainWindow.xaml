<Window x:Class="MiniWpfHelperTools.Samples.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiniWpfHelperTools.Samples"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>        
        <TabControl>
            <TabItem Header="Buttons">
                <local:ButtonSamplePage />
            </TabItem>
            <TabItem Header="ColorPicker">
                <local:ColorPickerSamplePage />
            </TabItem>
            <TabItem Header="Extensions">
                <local:ExtensionSamplePage />
            </TabItem>
            <TabItem Header="Dialog">
                <local:DialogSamplePage />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
